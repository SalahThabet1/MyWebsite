---
interface Props {
  name: string
  title: string
  description: string
  imageUrl?: string
  imageAlt?: string
  primaryButtonText?: string
  primaryButtonLink?: string
  secondaryButtonText?: string
  secondaryButtonLink?: string
}

const {
  name,
  title,
  description,
  imageUrl,
  imageAlt = `${name}'s profile picture`,
  primaryButtonText = "Read My Blog",
  primaryButtonLink = "/blog",
  secondaryButtonText = "View Projects", 
  secondaryButtonLink = "/projects"
} = Astro.props
---

<div class="flex flex-col lg:flex-row gap-8 items-center py-8">
  <!-- Left side - Intro text -->
  <div class="flex-1 space-y-4">
    <h1 class="text-4xl lg:text-5xl font-bold gradient-text">
      Hi {name} here üëã
    </h1>
    
    <h2 class="text-xl lg:text-2xl font-medium text-gray-700 dark:text-gray-300">
      {title}
    </h2>
    
    <p class="text-base lg:text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
      {description}
    </p>
    
    <div class="flex gap-4 pt-4">
      <a 
        href={primaryButtonLink} 
        class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-medium transition-all duration-200 transform hover:scale-105 shadow-lg"
      >
        {primaryButtonText}
      </a>
      <a 
        href={secondaryButtonLink} 
        class="px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg font-medium hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-200"
      >
        {secondaryButtonText}
      </a>
    </div>
  </div>
  
  <!-- Right side - Profile photo -->
  <div class="flex-shrink-0">
    <div class="relative">
      <div class="w-64 h-64 lg:w-80 lg:h-80 rounded-full overflow-hidden shadow-2xl bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900 dark:to-purple-900 ring-4 ring-white dark:ring-gray-800 ring-opacity-50">
        {imageUrl ? (
          <img 
            src={imageUrl} 
            alt={imageAlt}
            class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
            loading="eager"
          />
        ) : (
          <!-- Fallback avatar -->
          <div class="w-full h-full flex items-center justify-center text-8xl lg:text-9xl gradient-text">
            üë®‚Äçüíª
          </div>
        )}
      </div>
      
      <!-- Decorative elements -->
      <div class="absolute -top-4 -right-4 w-8 h-8 bg-yellow-400 rounded-full animate-pulse"></div>
      <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-green-400 rounded-full animate-pulse animation-delay-300"></div>
    </div>
  </div>
</div>

<style>
  .gradient-text {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  @media (prefers-color-scheme: dark) {
    .gradient-text {
      background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
  }
  
  .animation-delay-300 {
    animation-delay: 300ms;
  }
</style>
